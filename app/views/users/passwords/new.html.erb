<div class="forgot-password-form">
  <h2 class="login-title">Forgot your password?</h2>

  <div class="form-container">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class: 'forgot-password-label' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'forgot-password-input' %>
      </div>

      <div class="forgot-password-actions">
        <%= f.submit "Send reset instructions", class: 'forgot-password-button' %>
      </div>
    <% end %>
  </div>

  <%= render "users/shared/links" %>
</div>